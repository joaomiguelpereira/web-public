# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

#Routes for Offices
GET /offices                                    Offices.list
GET /offices/new		                        Offices.blank
GET /office/{id}								Offices.view
GET /office/{id}/edit							Offices.edit


#Users

GET /user/{userType}/new						Users.blank
POST /user/{userType}				     		Users.save
GET /users							     		Users.index
GET /user/registrationConfirmation				Users.userCreatedConfirmation
GET /user/activate/{activationKey}				Users.activateUser
GET /login										Users.login




# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
